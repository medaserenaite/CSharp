@model DojoSurveyWithValidation.Models.SurveyForm

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv='X-UA-compatible' content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
    crossorigin="anonymous">
  <title>Dojo Survey w/ validations</title>
</head>

<body>

      <!--  were not referincing route, were referencing action. we put method name -->
      <form asp-action="submit" asp-controller="User" method="POST">
      <label asp-for="Name"></label>
      <span asp-validation-for="Name"></span>
      <input asp-for="Name" type="text"><br>

      <label asp-for="Location"></label>
      <span asp-validation-for="Location"></span>
      <input asp-for="Location" type="text"><br>

      <label asp-for="Language"></label>
      <span asp-validation-for="Language"></span>
      <input asp-for="Language" type="text"><br>

      <label asp-for="Comment"></label>
      <span asp-validation-for="Comment"></span>
      <input asp-for="Comment" type="text"><br>
      <input type="Submit" value="Submit">
      </form>
      
  </div>
</body>

</html>