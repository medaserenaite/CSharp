@model LoginAndRegistration2.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv='X-UA-compatible' content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <title>Registration</title>
</head>

<style>
form{
    color:green;
    margin:auto;
    max-width: 500px;
    margin-top: 30px;
    background-color: antiquewhite;
    padding: 20px;
    border-radius: 15px;
    border:solid 1px darkgrey;
}
h2{
    color:darkcyan;
    margin: auto;
    margin-top: 20px;
    max-width: 400px;
}
.a{
    margin: 30px;
    padding: 10px;
    background-color:cornsilk;
    border: solid 1px darkcyan;
    border-radius: 15px;
    max-width: 70px;
}
span{
    color: red;
    font-size: 8px;
}
</style>

<body>
    <div id="container">
        <div class="a"><a href="/GoToLogin">Log In</a></div>
        <h2>Please Register Below</h2><br>
        <form asp-action="Create" asp-controller="User" method="POST">
            <span asp-validation-for="FirstName"></span> 
            <label asp-for="FirstName">First Name</label><br>
            <input asp-for="FirstName" type="text"><br>

            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName">Last Name</label><br>
            <input asp-for="LastName" type="text"><br>

            <span asp-validation-for="Email"></span>
            <label asp-for="Email">Email</label><br>
            <input asp-for="Email" type="email"><br>

            <span asp-validation-for="Password"></span>
            <label asp-for="Password">Password</label><br>
            <input asp-for="Password" type="password"><br>

            <span asp-validation-for="Confirm"></span>
            <label asp-for="Confirm">Confirm Password</label><br>
            <input asp-for="Confirm" type="password"><br><br>

            <input type="submit" value="submit">   
        </form>

    </div>
</body>

</html>