@model LoginAndRegistration2.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv='X-UA-compatible' content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <title>Registration</title>
</head>

<style>
form{
    color:green;
    margin:auto;
    max-width: 500px;
    margin-top: 30px;
    background-color: antiquewhite;
    padding: 20px;
    border-radius: 15px;
    border:solid 1px darkgrey;
}
h2{
    color:darkcyan;
    margin: auto;
    margin-top: 20px;
    max-width: 400px;
}
.a{
    margin: 30px;
    padding: 10px;
    background-color:cornsilk;
    border: solid 1px darkcyan;
    border-radius: 15px;
    max-width: 70px;
}
</style>

<body>
    <div id="container">
        <div class="a"><a href="/">Register</a></div>
        <h2>Please Log In</h2><br>
        <form asp-action="Login" asp-controller="User" method="POST">

            <label asp-for="Email">Email</label><br>
            <span asp-validation-for="Email"></span>
            <input asp-for="Email" type="email"><br>

            <label asp-for="Password">Password</label><br>
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" type="password"><br>

            <input type="submit" value="submit">   
        </form>
    </div>
</body>

</html>